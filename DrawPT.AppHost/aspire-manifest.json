{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "drawptapi": {
      "type": "project.v0",
      "path": "../DrawPT.Api/DrawPT.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "drawptui": {
      "type": "dockerfile.v0",
      "path": "../DrawPT.Vue/Dockerfile",
      "context": "../DrawPT.Vue",
      "env": {
        "NODE_ENV": "development",
        "services__drawptapi__http__0": "{drawptapi.bindings.http.url}",
        "services__drawptapi__https__0": "{drawptapi.bindings.https.url}",
        "PORT": "{vue.bindings.http.targetPort}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8002,
          "external": true
        }
      }
    }
  }
}